# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 80

[*.html]
indent_size = 2

[*.{json,yaml,yml}]
indent_size = 2
insert_final_newline = ignore

[*.{md,rst,txt}]
max_line_length = off

[Makefile]
indent_style = tab
